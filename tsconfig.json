{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "noEmit": false,
        "rootDir": "src",
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}